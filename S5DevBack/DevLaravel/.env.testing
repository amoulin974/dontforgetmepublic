APP_ENV=testing
APP_DEBUG=true
APP_KEY=base64:yourGeneratedKeyHere

# Base de données SQLite en mémoire pour les tests
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Désactivation des services externes pour éviter les effets de bord
CACHE_STORE=array
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
MAIL_MAILER=array

# Réduction du temps de génération de hash pour accélérer les tests
BCRYPT_ROUNDS=4

# Désactiver certaines fonctionnalités non nécessaires en test
APP_MAINTENANCE_DRIVER=file
PULSE_ENABLED=false
TELESCOPE_ENABLED=false
